@page
@model QuizKnock12Hour.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>12時間クイズ</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                プレイヤー名
            </th>
            <th>
                得点
            </th>
            <th>
                n
            </th>
            <th>
                正解数
            </th>
            <th>
                誤答数
            </th>
            <th>
                リセット回数
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Players) {
        <tr>
            <td>
                @item.Username
            </td>
            <td>
                @item.Tokuten()
            </td>
            <td>
                @item.NextDownPoint()
            </td>
            <td>
                @item.Seikai
            </td>
            <td>
                @item.Goto()
            </td>
            <td>
                @item.ResetKaisu()
            </td>
        </tr>
}
    </tbody>
</table>
